{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018","DOM"],
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "typeRoots": ["./types", "./node_modules/@types"],
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "example",
    "**/*.test.ts",
    "**/setupTests.ts",
    "**/__mocks__/*",
    "**/dist/*"
  ],
  "include": ["./src/**/*"]
}
